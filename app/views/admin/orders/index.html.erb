<div class="container">
  <div class="row">
    <h4><strong>Delivering Order:</strong></h4>
  </div>
  <% if @orders_delivering.present? %>
    <% @orders_delivering.each do |order| %>
      <div class="row border_bottom bottomspace">
        <div class="col-md-1 text-center">
          <p><strong>Name:</strong></p>
          <p><%= order.user.name %></p>
        </div>
        <div class="col-md-3 text-center">
          <ul>
            <% order.order_details.each do |order_detail| %>
              <li><%= order_detail.product.name %></li>
            <% end %>
          </ul>
        </div>
        <div class="col-md-1">
          <p><strong>Total:</strong></p>
          <p><%= number_to_currency order.total %></p>
        </div>
        <div class="col-md-3">
          <p><strong>Address:</strong></p>
          <p class="word-wrap"><%= order.delivery_address %></p>
        </div>
        <div class="col-md-2">
          <p><strong>Order at:</strong></p>
          <p><%= order.created_at %></p>
        </div>
        <div class="col-md-1">
          <p><strong>Status:</strong></p>
          <p><%= order.status %></p>
        </div>
        <div class="col-md-1">
          <div class="bottomspace">
            <%= form_for [:admin, order] do |f| %>
              <%= f.hidden_field :status, value: "delivered" %>
              <%= f.submit "Confirm", class: "btn btn-success" %>
            <% end %>
          </div>
          <div>
            <%= form_for [:admin, order] do |f| %>
              <%= f.hidden_field :status, value: "cancel" %>
              <%= f.submit "Cancel", class: "btn btn-danger" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>Have no delivering order</p>
  <% end %>

  <div class="row">
    <h4 style="margin-top: 50px"><strong>Delivered Order:</strong></h4>
  </div>
    <% if @orders_delivered.present? %>
      <% @orders_delivered.each do |order| %>
        <div class="row border_bottom bottomspace">
          <div class="col-md-1 text-center">
            <p><strong>Name:</strong></p>
            <p><%= order.user.name %></p>
          </div>
          <div class="col-md-3 text-center">
            <ul>
              <% order.order_details.each do |order_detail| %>
                <li><%= order_detail.product.name %></li>
              <% end %>
            </ul>
          </div>
          <div class="col-md-1">
            <p><strong>Total:</strong></p>
            <p><%= number_to_currency order.total %></p>
          </div>
          <div class="col-md-3">
            <p><strong>Address:</strong></p>
            <p class="word-wrap"><%= order.delivery_address %></p>
          </div>
          <div class="col-md-2">
            <p><strong>Order at:</strong></p>
            <p><%= order.created_at %></p>
          </div>
          <div class="col-md-1">
            <p><strong>Status:</strong></p>
            <p><%= order.status %></p>
          </div>
          <div class="col-md-1">
            <%= link_to "Delete", admin_order_path(order), class: "btn btn-danger", method: :delete %>
          </div>
        </div>
      <% end %>
  <% else %>
    <p>Have no delivered order</p>
  <% end %>

  <div class="row">
    <h4 style="margin-top: 50px"><strong>Order Canceled:</strong></h4>
  </div>
    <% if @orders_cancel.present? %>
      <% @orders_cancel.each do |order| %>
        <div class="row border_bottom bottomspace">
          <div class="col-md-1 text-center">
            <p><strong>Name:</strong></p>
            <p><%= order.user.name %></p>
          </div>
          <div class="col-md-3 text-center">
            <ul>
              <% order.order_details.each do |order_detail| %>
                <li><%= order_detail.product.name %></li>
              <% end %>
            </ul>
          </div>
          <div class="col-md-1">
            <p><strong>Total:</strong></p>
            <p><%= number_to_currency order.total %></p>
          </div>
          <div class="col-md-3">
            <p><strong>Address:</strong></p>
            <p class="word-wrap"><%= order.delivery_address %></p>
          </div>
          <div class="col-md-2">
            <p><strong>Order at:</strong></p>
            <p><%= order.created_at %></p>
          </div>
          <div class="col-md-1">
            <p><strong>Status:</strong></p>
            <p><%= order.status %></p>
          </div>
          <div class="col-md-1">
            <%= link_to "Delete", "#", class: "btn btn-danger", method: :delete %>
          </div>
        </div>
      <% end %>
  <% else %>
    <p>Have no canceled order</p>
  <% end %>
</div>
