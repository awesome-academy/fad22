<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".fastfood"), root_path, id: "logo" %>
    <div class="collapse navbar-collapse" id="navbarResponsive">
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li class="nav-item">
            <%= render "layouts/cart_text" %>
          </li>
        <% end %>
        <li><%= link_to t(".home"), root_path %></li>
        <li><%= link_to t(".product"), products_path %>
        <li>
          <%= link_to t(".category"),
           categories_path if logged_in? && current_user.admin? %>
        </li>
        <li>
          <%= link_to t(".order"),
           admin_orders_path if logged_in? && current_user.admin? %>
        </li>
        <li>
          <%= link_to t(".suggestion"),
           admin_suggestions_path if logged_in? && current_user.admin? %>
        </li>
        <% if logged_in? %>
            <li>
              <%= link_to t(".users"), users_path if current_user.admin? %>
            </li>
          <li class="dropdown">
            <%= link_to t(".account"), "#", {class: "dropdown-toggle",
              "data-toggle" => "dropdown"} %>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li>
                <%= link_to t(".settings"), edit_user_path(current_user) %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".login"), login_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
