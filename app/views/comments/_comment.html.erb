<div class="media" id="comment_<%= comment.id %>">
  <p class="pull-right"><small><%= comment.created_at %></small></p>
  <%= link_to (gravatar_for comment.user), comment.user,
    class: "media-left" %>
  <div class="media-body">
    <h4 class="media-heading user_name">
      <%= comment.user.name %> &nbsp &nbsp
      <span class ="text-warning">&#9733; &#9733; &#9733; &#9733;</span>
    </h4>
    <%= comment.content %>
      <p><small>
        <% if can? :update, comment %>
          <%= link_to t(".edit"), edit_comment_path(comment), remote: true %>
        <% end %>
        <% if can? :destroy, comment%>
          <%= link_to t(".delete"), comment_path(comment), method: :delete,
            remote: true %>
        <% end %>
      </small></p>
  </div>
</div>
