<% provide(:title, t(".heading")) %>
<h1 class="text-center"><%= t ".heading" %></h1>

<div class="container">
  <div class = "row" style = "margin-bottom: 15px">
    <div class="col-md-6">
      <%= link_to t(".add"), "#",
        class: "btn btn-primary" if logged_in? && current_user.admin? %>
    </div>
  </div>

  <div class="row">
    <%= render @products %>
  </div>
  <div class="container center">
    <%= will_paginate @products %>
  </div>
</div>
