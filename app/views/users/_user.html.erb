<li>
  <div class= "row">
    <div class = "col-md-3">
      <%= gravatar_for user, size: Settings.gravatar.index_size %>
      <%= link_to user.name, user %>
    </div>
    <div class="col-md-3">
      <%= user.address %>
    </div>
    <% if current_user.admin? && !current_user?(user) %>
      <div class = "col-md-3">
         <%= link_to t(".delete"), (admin_user_path user), method: :delete,
          class: "btn btn-danger",data: {confirm: t(".you_sure?")} %>
      </div>
    <% end %>
</div>
</li>
